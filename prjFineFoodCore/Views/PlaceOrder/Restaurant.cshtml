@model IEnumerable<prjFineFoodCore.ViewModel.CRestaurantViewModel>

@{
    ViewBag.Title = "餐廳選擇";
}

@section Scripts{

}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        @{ 
                            if (item.Photos == null) 
                            {<img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />}
                            else
                            {<img class="card-img-top" src="~/Images/Restaurants/@item.Photos" alt="..." />}
                            }
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.RestaurantName</h5>
                                <!-- Product price-->
                                @item.OpenTime - @item.CloseTime
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">@Html.ActionLink("選擇餐廳", "RestaurantMenu", new { id = item.RestaurantId }, new { @class = "btn btn-outline-primary" })</div>
                        </div>
                    </div>
                </div>

            };


        </div>
    </div>
</section>

