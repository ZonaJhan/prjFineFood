@model IEnumerable<prjFineFoodCore.ViewModel.CFoodViewModel>

@{
    ViewBag.Title = "菜單";
}

@section Scripts{
    <script>

        function ShowMessage() {
            toastr["success"]("商品已加入購物車！");
        }

        $("divAdd").click(ShowMessage());

    </script>
}

<div class="container">
    <main>
        <div class="container" style="margin-top:40px">
            <div class="row">
                <div class="col-5">
                    <p></p>
                    <p></p>
                    <img class="pl-5" src="" />
                    <div class="col-8">
                        <h3>@ViewBag.RestaurantName</h3>
                        <p>地址：@ViewBag.RestaurantAddress;</p>
                        <p>電話：@ViewBag.RestaurantPhone</p>
                    </div>
                </div>
            </div>
        </div>

        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var item in Model)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Food image-->
                                <img class="card-img-top" src="~/Images/Foods/@item.Photo" alt="..." />
                                @*<img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />*@
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Food name-->
                                        <h5 class="fw-bolder">@item.FoodName</h5>
                                        <!-- Food price-->
                                        $@item.Price
                                    </div>
                                </div>
                                <!-- Food actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">@Html.ActionLink("加入購物車", "AddToCart", new { id = item.FoodId }, new { id = "divAdd", @class = "btn btn-outline-primary" })</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <hr />
        <p></p>
        @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.650758923442!2d121.51251461500644!3d25.045923483966877!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442a973287a07f9%3A0xb481dd979cc69311!2sNo.%208%2C%20Guanqian%20Rd%2C%20Zhongzheng%20District%2C%20Taipei%20City%2C%20100!5e0!3m2!1sen!2stw!4v1650970285473!5m2!1sen!2stw" width="1300" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>*@
    </main>
</div>
